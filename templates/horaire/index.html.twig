{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles pour le titre */
        h1 {
            text-align: center;
            color: #333;
            font-size: 2.5rem;
            margin-top: 20px;
            font-family: 'Arial', sans-serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        /* Styles pour les cartes de films */
        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: #fff;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .card img {
            height: 100%;
            object-fit: cover;
            border-radius: 15px 0 0 15px;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
            line-height: 1.6;
        }

        /* Styles pour les boutons de séances */
        .btn-outline-primary {
            border: 2px solid #ff5722;
            color: #ff5722;
            font-weight: bold;
            border-radius: 25px;
            padding: 8px 16px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-outline-primary:hover {
            background-color: #ff5722;
            color: white;
        }

        /* Styles pour le footer */
        footer {
            background-color: #333;
            color: white;
            padding: 40px 0;
            margin-top: 50px;
        }

        footer h5 {
            color: #ff5722;
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif;
        }

        footer p {
            font-size: 0.9rem;
            line-height: 1.6;
            color: #ddd;
        }

        footer a {
            color: #ff5722;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #ff8a65;
        }

        footer .bi {
            font-size: 1.2rem;
            margin-right: 10px;
        }

        footer .text-center {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #aaa;
        }

        /* Effet de survol pour les icônes sociales */
        footer .bi-facebook:hover {
            color: #3b5998;
        }

        footer .bi-twitter:hover {
            color: #1da1f2;
        }

        footer .bi-instagram:hover {
            color: #e4405f;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Les Films Disponibles</h1>
    <div class="container mt-4">
        {% for film in films %}
            <div class="card mb-4 shadow-sm">
                <div class="row g-0">
                    <!-- Image du film -->
                    <div class="col-md-4">
                        <img src="{{ asset(film.afficheUrl) }}" class="img-fluid rounded-start" alt="{{ film.titre }}">
                    </div>
                    
                    <!-- Détails du film -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ film.titre }}</h5>
                            <p class="card-text">{{ film.description }}</p>
                            
                            <!-- Séances disponibles -->
                            <div class="mt-3">
                                <h6>Séances disponibles :</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    {% for seance in film.seances %}
                                        <a href="{{ path('reserver_ticket', { 'seanceId': seance.id }) }}" class="btn btn-outline-primary">
                                            {{ seance.dateHeure | date('d/m/Y H:i') }}
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <!-- Section à propos -->
                <div class="col-md-4">
                    <h5>À propos de CINEVERSE</h5>
                    <p>
                        Bienvenue chez CINEVERSE, votre destination pour vivre une expérience cinématographique inoubliable.
                        Découvrez les dernières sorties, réservez vos billets en ligne et profitez d'un confort exceptionnel.
                    </p>
                </div>

                <!-- Section liens rapides -->
                <div class="col-md-4">
                    <h5>Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Accueil</a></li>
                        <li><a href="{{ path('app_horaire') }}" class="text-white text-decoration-none">Films en salle</a></li>
                        <li><a href="{{ path('app_espace_choix') }}" class="text-white text-decoration-none">Espace</a></li>
                        <li><a href="{{ path('app_a_propos') }}" class="text-white text-decoration-none">À propos</a></li>
                    </ul>
                </div>

                <!-- Section contact -->
                <div class="col-md-4">
                    <h5>Contactez-nous</h5>
                    <p>
                        <i class="bi bi-geo-alt-fill"></i> 123 Rue du Cinéma, Ville XYZ<br>
                        <i class="bi bi-telephone-fill"></i> +212 6 1234 5678<br>
                        <i class="bi bi-envelope-fill"></i> contact@cineverse.com
                    </p>
                    <div>
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <hr class="bg-light">
            <div class="text-center">
                <p class="mb-0">© 2025 CINEVERSE. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
{% endblock %}