
{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <style>
        /* Style général de la page */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Style du tableau */
        .table {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            border-collapse: collapse;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .table th {
            background-color: #3498db;
            color: #ffffff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9em;
            letter-spacing: 1px;
        }

        .table tr:hover {
            background-color: #f9f9f9;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        /* Style des liens */
        .action-links {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 30px;
        }

        .action-links a {
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .action-links a.back-link {
            background-color: #6c757d;
            color: #ffffff;
        }

        .action-links a.edit-link {
            background-color: #3498db;
            color: #ffffff;
        }

        .action-links a.delete-link {
            background-color: #e74c3c;
            color: #ffffff;
        }

        .action-links a:hover {
            transform: translateY(-2px);
        }

        .action-links a.back-link:hover {
            background-color: #5a6268;
        }

        .action-links a.edit-link:hover {
            background-color: #2980b9;
        }

        .action-links a.delete-link:hover {
            background-color: #c0392b;
        }
    </style>

    <h1>Détails de l'actualité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_film</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.description }}</td>
            </tr>
             <tr>
                <th>Date_sortie</th>
                <td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ film.duree }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.genre }}</td>
            </tr>
            <tr>
                <th>Realisateur</th>
                <td>{{ film.realisateur }}</td>
            </tr>
            <tr>
                <th>Acteurs</th>
                <td>{{ film.acteurs }}</td>
            </tr>
            <tr>
                <th>Affiche_url</th>
                <td>{{ film.afficheUrl }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action-links">
        <a href="{{ path('app_admin_films_index') }}" class="back-link">Retour à la liste</a>
        <a href="{{ path('app_admin_films_edit', {'id': film.id}) }}" class="edit-link">Modifier</a>
        {{ include('admin_films/_delete_form.html.twig') }}
    </div>
{% endblock %}
