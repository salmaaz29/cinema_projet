{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
.container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
    
    h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #ff5722;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1.5s ease-in-out;
    }
    .lead {
        font-size: 1.25rem;
        color: #555;
        margin-bottom: 30px;
        animation: slideIn 1s ease-in-out;
    }
 section {
        margin-bottom: 40px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
     section:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
     h2 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 15px;
        border-bottom: 2px solid #ff5722;
        padding-bottom: 10px;
    }
     ul {
        list-style-type: none;
        padding: 0;
    }
 ul li {
        padding: 10px 0;
        font-size: 1rem;
        color: #555;
    }

  
/* Animations */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideIn {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
/* Styles pour le footer */
        footer {
            background-color: #333;
            color: white;
            padding: 40px 0;
            margin-top: 50px;
        }

        footer h5 {
            color: #ff5722;
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif;
        }

        footer p {
            font-size: 0.9rem;
            line-height: 1.6;
            color: #ddd;
        }

        footer a {
            color: #ff5722;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #ff8a65;
        }

        footer .bi {
            font-size: 1.2rem;
            margin-right: 10px;
        }

        footer .text-center {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #aaa;
        }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">CineVerse</h1>
    <p class="lead text-center">Bienvenue sur CinéVerse, votre plateforme dédiée à l'expérience cinématographique en ligne.</p>

    <section class="mt-4">
        <h2>Notre mission</h2>
        <p>CinéVerse vous permet de découvrir les films en salles, d’acheter vos tickets en ligne et de télécharger vos billets facilement.</p>
    </section>

    <section class="mt-4">
        <h2>Pourquoi nous choisir ?</h2>
        <ul>
            <li>Expérience fluide et intuitive</li>
            <li>Réservation rapide et sécurisée</li>
        </ul>
    </section>

    <section class="mt-4">
        <h2>Contactez-nous</h2>
        <p>Vous avez une question ? contactez-nous via notre e-mail contact@cineverse.com .</p>
    </section>
</div>
 <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <!-- Section à propos -->
                <div class="col-md-4">
                    <h5>À propos de CINEVERSE</h5>
                    <p>
                        Bienvenue chez CINEVERSE, votre destination pour vivre une expérience cinématographique inoubliable.
                        Découvrez les dernières sorties, réservez vos billets en ligne et profitez d'un confort exceptionnel.
                    </p>
                </div>

                <!-- Section liens rapides -->
                <div class="col-md-4">
                    <h5>Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Accueil</a></li>
                        <li><a href="{{ path('app_horaire') }}" class="text-white text-decoration-none">Films en salle</a></li>
                        <li><a href="{{ path('app_espace_choix') }}" class="text-white text-decoration-none">Espace</a></li>
                        <li><a href="{{ path('app_a_propos') }}" class="text-white text-decoration-none">À propos</a></li>
                    </ul>
                </div>

                <!-- Section contact -->
                <div class="col-md-4">
                    <h5>Contactez-nous</h5>
                    <p>
                        <i class="bi bi-geo-alt-fill"></i> 123 Rue du Cinéma, Ville XYZ<br>
                        <i class="bi bi-telephone-fill"></i> +212 6 1234 5678<br>
                        <i class="bi bi-envelope-fill"></i> contact@cineverse.com
                    </p>
                    <div>
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <hr class="bg-light">
            <div class="text-center">
                <p class="mb-0">© 2025 CINEVERSE. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
{% endblock %}
