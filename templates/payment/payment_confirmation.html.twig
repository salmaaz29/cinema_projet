{% extends 'base.html.twig' %}

{% block title %}Paiement confirmé - CinéVerse{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4 text-center" style="border-radius: 15px; background: #f9f9f9;">
        <h2 class="text-success mb-4" style="font-weight: bold;">Paiement confirmé</h2>
        <p class="mt-3" style="font-size: 1.2rem; color: #343a40;">Merci <strong>{{ ticket.user.nomPrenom }}</strong> !</p>
        <p style="font-size: 1.2rem; color: #343a40;">
            Votre réservation pour le film <strong>"{{ ticket.seance.film.titre }}"</strong> a été confirmée.
        </p>
        <p style="font-size: 1.1rem; color: #6c757d;">Le paiement a été effectué avec succès.</p>

        <div class="mt-4">
            <a href="{{ path('app_pre_controller') }}" class="btn btn-primary me-2" style="font-size: 1rem; padding: 10px 20px; border-radius: 8px;">
                Retour à l'accueil
            </a>
            <a href="{{ path('generate_ticket_pdf', { 'ticketId': ticket.id }) }}" class="btn btn-success" style="font-size: 1rem; padding: 10px 20px; border-radius: 8px;">
                Télécharger votre ticket
            </a>
        </div>
    </div>
</div>
{% endblock %}
