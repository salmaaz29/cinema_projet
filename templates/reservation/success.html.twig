{% extends 'base.html.twig' %}

{% block title %}Réservation Confirmée - CinéVerse{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Réservation Confirmée</h1>
    <p class="text-center">Votre réservation pour le film "{{ seance.film.titre }}" a été confirmée.</p>
    <p class="text-center">Nous vous attendons le {{ seance.dateHeure|date('d/m/Y H:i') }}.</p>
    <a href="{{ path('app_pre_controller') }}" class="btn btn-primary btn-block">Retour à l'accueil</a>
</div>
{% endblock %}
