{% extends 'base.html.twig' %}

{% block title %}Seances index{% endblock %}

{% block body %}
 <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
            background-color: #ffffff;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow: hidden;
        }

        .table thead {
            background: linear-gradient(135deg, #2980b9, #3498db);
            color: #ffffff;
        }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9em;
            letter-spacing: 1px;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .table tbody tr:nth-child(even) {
            background-color: #fafafa;
        }

        .table tbody tr:nth-child(even):hover {
            background-color: #f8f9fa;
        }

        .table td a {
            text-decoration: none;
            color: #3498db;
            font-weight: 500;
            margin-right: 10px;
            transition: color 0.3s ease;
        }

        .table td a:hover {
            color: #2980b9;
        }

        .table td a:last-child {
            margin-right: 0;
        }

        .create-new-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #2980b9, #3498db);
            color: #ffffff;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .create-new-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        }

        .no-records {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 20px;
        }
    </style>

   <h1>Table des Seances</h1>



    <table class="table">
        <thead>
            <tr>
                <th>Id_seances</th>
                <th>Places_disponibles</th>
                <th>Date_heure</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.placesDisponibles }}</td>
                <td>{{ seance.dateHeure ? seance.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ seance.prix }}</td>
                <td>
                    <a href="{{ path('app_admin_seances_show', {'id': seance.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_seances_new') }}" class="create-new-btn">Créer une nouvelle Séance</a>
{% endblock %}
